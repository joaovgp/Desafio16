#:kivy 2.1.0
<Client>:
    orientation: 'vertical'
    background_color: 0, 0, 0, 1
    # -------------------------- BLOCO DE CONEXAO ---------------------------
    BoxLayout:
        canvas.before:
            Color:
                rgba: (0.8,0.8,0.8, 0.8)
            Rectangle:
                size: self.size
                pos: self.pos
            Color:
                rgba: (0, 0, 0, 1)
            Rectangle:
                size: self.width-10, self.height-10
                pos: self.x+5, self.y+5
        size_hint: 1, 0.2
        padding: '20sp', '10sp', '20sp', '10sp'
        spacing: '10sp'
        BoxLayout:
            canvas.before:
                Color:
                    rgba: (0.8,0.8,0.8, 0.8)
                Rectangle:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: (0, 0, 0, 1)
                Rectangle:
                    size: self.width-4, self.height-4
                    pos: self.x+2, self.y+2
            padding: '10sp'
            spacing: '20sp'
            Label:
                text: 'IP'
                size_hint: 0.05, 1
                font_size: '20sp'
            TextInput:
                id: ip
                write_tab: False
                multiline: False
                focus: 1
                size_hint: 0.2, 0.5
                pos_hint: {'x': 0, 'center_y': 0.5}
        BoxLayout:
            canvas.before:
                Color:
                    rgba: (0.8,0.8,0.8, 0.8)
                Rectangle:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: (0, 0, 0, 1)
                Rectangle:
                    size: self.width-4, self.height-4
                    pos: self.x+2, self.y+2
            padding: '10sp'
            Label:
                text: 'Porta'
                size_hint: 0.05, 1
                font_size: '20sp'
            TextInput:
                id: port
                write_tab: False
                multiline: False
                on_text_validate: root.connect()
                focus: 1
                size_hint: 0.2, 0.5
                pos_hint: {'x': 0, 'center_y': 0.5}
        BoxLayout:
            padding: '10sp', 0, '10sp', 0
            size_hint: 0.5, 1
            Button:
                id: connect
                size_hint: 0.6, 0.6
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: "Conectar"
                on_release: root.connect()
    # ---------------------------------------------------------------------
    # -------------------------- TELA PRINCIPAL ---------------------------
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (0.8,0.8,0.8, 0.8)
            Rectangle:
                size: self.size
                pos: self.pos
            Color:
                rgba: 90/255, 190/255, 255/255, 0.7
            Rectangle:
                size: self.width-10, self.height-10
                pos: self.x+5, self.y+5
        BoxLayout:
            orientation: 'horizontal'
            padding: '15sp', '10sp', '15sp', '0sp'
            spacing: '10sp'
            size_hint: 0.9, 0.25
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            BoxLayout:
                orientation: 'vertical'
                spacing: '10sp'
                padding: '10sp'
                Label:
                    text: "Endere√ßo:"
                    font_size: '20sp'
                    size_hint: 0.7, 0.2
                    pos_hint: {'center_x': 0.3, 'center_y': 0.9}
                TextInput:
                    id: address
                    write_tab: False
                    multiline: False
                    focus: 1
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 0.8, 0.2
            BoxLayout:
                orientation: 'vertical'
                spacing: '10sp'
                padding: '10sp'
                Label:
                    text: "Data inicial:"
                    font_size: '20sp'
                    size_hint: 0.7, 0.2
                    pos_hint: {'center_x': 0.3, 'center_y': 0.9}
                TextInput:
                    id: initialDate
                    write_tab: False
                    multiline: False
                    focus: 1
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 0.8, 0.2
            BoxLayout:
                orientation: 'vertical'
                spacing: '10sp'
                padding: '10sp'
                Label:
                    text: "Data final:"
                    font_size: '20sp'
                    size_hint: 0.7, 0.2
                    pos_hint: {'center_x': 0.3, 'center_y': 0.9}
                TextInput:
                    id: finalDate
                    write_tab: False
                    multiline: False
                    focus: 1
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 0.8, 0.2
            BoxLayout:
                orientation: 'vertical'
                spacing: '10sp'
                padding: '10sp'
                Button:
                    text: "Buscar"
                    id: search
                    disabled: True
                    on_release: root.searchData()
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 0.6, 0.35
        BoxLayout:
            canvas.before:
                Color:
                    rgba: (0.8,0.8,0.8, 0.8)
                Rectangle:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: 230/255, 230/255, 230/255, 1
                Rectangle:
                    size: self.width-4, self.height-4
                    pos: self.x+2, self.y+2
            orientation: 'vertical'
            id: window
            

